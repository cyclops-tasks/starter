#!/usr/bin/env node

const dotEvent = require("dot-event").default
const dotTask = require("@dot-event/task").default

const dotStarter = require("../dist/starter").default

const events = dotEvent()

dotStarter({ events })
dotTask({ events })

events
  .task({
    argv: process.argv.slice(2),
    op: "starter",
    path: process.cwd(),
  })
  .catch(function(e) {
    console.error(e)
    process.exit(1)
  })
